mixin input(type, label)
	.input-container
		input(type='#{type}' id='#{label}' required)
		label(for='#{label}')=label
		.bar
mixin textarea(rows,cols ,label)
	.input-container
		textarea(rows='#{rows}' cols='#{cols}' id='#{label}' required)
		label(for='#{label}')=label
mixin button(text)
	.button-container
		button
			span=text


